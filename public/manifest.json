{
  "manifest_version": 3,
  "name": "Google Password Manager Assistant",
  "version": "0.1.0",
  "description": "Use Google Password Manager in Chromium browsers",
  "permissions": [
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://passwords.google.com/search"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "GPM Helper"
  }
}